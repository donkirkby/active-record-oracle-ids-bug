{
  "name": "active-record-oracle-ids-bug",

  "dockerComposeFile": "../compose.yml",
  "service": "client",
  "runServices": ["client", "db"],
  "workspaceFolder": "/opt/project",
  "postCreateCommand": [
    ".devcontainer/install_ruby.sh"
  ],
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/opt/oracle/instantclient_23_4",
    "LD_LIBRARY_PATH": "/opt/oracle/instantclient_23_4",
    "TNS_ADMIN": "/opt/project/config"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Shopify.ruby-lsp",
        "Oracle.sql-developer"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash",
            "args": ["--login"]
          }
        }
      }

    }
  }
}